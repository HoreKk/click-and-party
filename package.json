    "@svgr/core": "^8.1.0",
    "@svgr/plugin-jsx": "^8.1.0",
    "@tanstack/router-plugin": "^1.120.10",
    "@types/node": "^22.15.21",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react-swc": "^3.9.0",
    "globals": "^16.0.0",
    "lefthook": "^1.11.13",
    "typescript": "~5.8.3",
    "unplugin-icons": "^22.1.0",
    "vite": "^6.3.5",
    "wrangler": "^4.16.1"
  }
}
